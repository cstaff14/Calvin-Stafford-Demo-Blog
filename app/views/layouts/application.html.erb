<!DOCTYPE html>
<html>
  <head>
    <title>DemoBlog</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <section class="hero is-primary is-medium">
      <!-- Hero head: will stick at the top -->
      <div class="hero-head">
        <nav class="navbar">
          <div class="container">
            <div class="navbar-brand">
              <%= link_to 'Demo Blog', root_path, class: "navbar-item" %>
              <span class="navbar-burger burger" data-target="navbarMenuHeroA">
                  <span></span>
                  <span></span>
                  <span></span>
                </span>
            </div>
            <div id="navbarMenuHeroA" class="navbar-menu">
              <div class="navbar-end">
                <div class="navbar-item">
                  <div class="buttons">
                    <%= link_to "Create New Post", new_post_path, class: "button is-primary navbar-item" unless !current_user || !current_user.admin || controller_name == 'posts' && action_name == 'new' %>
                    <% if !current_user %>
                      <strong><%= link_to 'Sign in', new_user_session_path, class: "button is-primary navbar-item" %></strong>
                      <strong><%= link_to 'Sign up', new_user_registration_path, class: "button is-link is-inverted is-outlined navbar-item" %></strong>
                    <% else %>
                      <%= link_to 'Sign out', destroy_user_session_path, method: :delete, class: "button is-link is-inverted is-outlined navbar-item" %>
                    <% end %>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </nav>
      </div>

      <!-- Hero content: will be in the middle -->
      <div class="hero-body">
        <div class="container has-text-centered">
          <h1 class="title">
            <%= yield :page_title %>
          </h1>
        </div>
      </div>
    </section>
    <%= render 'layouts/alerts' %>
    <%= yield %>
  </body>
</html>
