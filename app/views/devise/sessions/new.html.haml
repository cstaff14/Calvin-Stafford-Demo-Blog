- content_for :page_title, "Log in"

= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
  = f.error_notification

  .container.is-fluid
    .columns
      .column
      .column
        .form-inputs
          %br
          .field
            .control
              = f.input :email,
                        required: false,
                        autofocus: true,
                        wrapper: false,
                        input_html: { autocomplete: "email", class: "input" },
                        label_html: { class: 'label' }
          .field
            .control
              = f.input :password,
                        required: false,
                        wrapper: false,
                        input_html: { autocomplete: "current-password", class: "input" },
                        label_html: { class: 'label' }


          .field.form-actions.is-centered
            .control
              = f.button :submit, "Log in", class: "button is-primary"
              = render "devise/shared/links", class: "float-right"
      .column

