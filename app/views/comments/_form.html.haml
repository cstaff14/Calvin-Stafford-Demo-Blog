= simple_form_for([@post, @post.comments.build]) do |f|
  .field
    .control
      = f.input :name, input_html: {class: 'input'}, wrapper: false, required: true, label_html: { class: 'label' } unless current_user # if user is signed in, their name is the comment's name

  .field
    .control
      = f.input :comment, input_html: {class: 'textarea'}, wrapper: false, label_html: { class: 'label' }

  = f.button :submit, 'Post New Comment', class: "button is-primary"